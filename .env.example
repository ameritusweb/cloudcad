# CloudCad Environment Variables

# Backend Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your_secret_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/cloudcad_db

# Frontend URL (for CORS settings)
FRONTEND_URL=http://localhost:3000

# CalculiX Configuration
CALCULIX_PATH=/path/to/calculix/executable

# File Storage (could be local path or cloud storage URL)
STORAGE_PATH=/path/to/file/storage

# API Keys (if using any external services)
# EXAMPLE_API_KEY=your_api_key_here

# Logging
LOG_LEVEL=INFO

# Performance
MAX_WORKERS=4

# Feature Flags
ENABLE_STRUCTURAL_ANALYSIS=True

# Security
ALLOWED_HOSTS=localhost,127.0.0.1

# Redis (if using for caching or task queue)
# REDIS_URL=redis://localhost:6379/0