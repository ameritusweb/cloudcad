{
    "paths": ["src/**"],
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "outDir": "dist",
        "esModuleInterop": true,
        "strict": true,
        "declaration": true,
        "sourceMap": true,
        "composite": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./src/**/*"],
    "exclude": ["./node_modules"]
}